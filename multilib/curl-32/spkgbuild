# description	: Utility and a library used for transferring files
# depends	: curl openssl-32

name=curl-32
version=8.1.1
release=2
source="https://curl.haxx.se/download/${name%-*}-$version.tar.xz
	$name-quote-compiler-command.patch
	hanging-http2.patch"

build() {
	export CC="gcc -m32"
	export CXX="g++ -m32"
	export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

	cd ${name%-*}-$version

	patch -Np1 -i $SRC/$name-quote-compiler-command.patch
	patch -Np1 -i $SRC/hanging-http2.patch	
	
	autoreconf -fi
	./configure \
		--prefix=/usr \
		--libdir=/usr/lib32 \
		--disable-static \
		--enable-threaded-resolver \
		--with-ca-bundle=/etc/ssl/certs/ca-certificates.crt \
		--with-openssl \
		--without-brotli \
		--without-libidn2 \
		--without-libpsl \
		--without-librtmp \
		--without-nghttp2 \
		--without-zstd
	make
	make DESTDIR=$PWD/DESTDIR install

	mkdir -p $PKG/usr/lib32
	cp -Rv DESTDIR/usr/lib32/* $PKG/usr/lib32
}
