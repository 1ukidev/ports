# description	: Management tools and libraries relating to cryptography
# depends	: openssl

name=openssl-32
version=1.1.1c
release=1
source=(https://openssl.org/source/openssl-$version.tar.gz)
md5sum=(15e21da6efe8aa0e0768ffd8cd37a5f6)

build() {
	cd openssl-$version

	export CC="gcc -m32"
	export CXX="g++ -m32"
	export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

  	./Configure --prefix=/usr      \
	         --openssldir=/etc/ssl \
	         --libdir=lib32        \
		 -m32 linux-generic32  \
	         shared                \
	         zlib-dynamic
	make

	# disable static lib
	sed -i '/INSTALL_LIBS/s/libcrypto.a libssl.a//' Makefile

	make DESTDIR=$PKG MANDIR=/usr/share/man MANSUFFIX=ssl install

	rm -fr $PKG/{usr/{bin,include,share},etc/}
}
