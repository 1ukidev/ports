# description	: Support for bookmarks and the XBEL format
# depends	: kxmlgui extra-cmake-modules qt5 python3

name=kbookmarks
version=5.46.0
release=1
source=(http://download.kde.org/stable/frameworks/${version::4}/$name-$version.tar.xz)

build() {
	cd $name-$version

	export CXXFLAGS="${CXXFLAGS} -isystem /usr/include/openssl-1.0"

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/usr	\
	      -DCMAKE_PREFIX_PATH=/usr		\
	      -DCMAKE_BUILD_TYPE=Release	\
	      -DBUILD_TESTING=OFF		\
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
}

md5sum=(1c5c1ca0f47540e0306fe0b861f04cf7)
