# description	: KDE and Plasma resources management GUI
# depends	: knewstuff kdeclarative kitemmodels qt5 hicolor-icon-theme
# makedepends	: extra-cmake-modules python3 plasma-framework

name=discover
version=5.12.5
release=1
source=(http://download.kde.org/stable/plasma/$version/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/usr	\
		 -DCMAKE_BUILD_TYPE=Release	\
		 -DBUILD_TESTING=OFF		\
		 -Wno-dev ..
	make
	make DESTDIR=$PKG install
}

md5sum=(9101bdf4a6664dddc0e15b8fda4681e9)
