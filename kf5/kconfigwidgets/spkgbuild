# description	: Widgets for KConfig
# depends	: kauth kcodecs kconfig kguiaddons ki18n kwidgetsaddons extra-cmake-modules kdoctools python3 mesa qt5

name=kconfigwidgets
version=5.57.0
release=1
source=(http://download.kde.org/stable/frameworks/${version::4}/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/usr	\
	      -DCMAKE_PREFIX_PATH=/usr		\
	      -DCMAKE_BUILD_TYPE=Release	\
	      -DBUILD_TESTING=OFF		\
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
	
	rm -r $PKG/usr/share/locale
        rm -r $PKG/usr/share/man/{ca,uk,nl,pt_BR,de,ru,it,es,pt,sv}
}

md5sum=(676fdcd53f6a5b43a729881304c3fbbd)
