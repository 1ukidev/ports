# description	: Multi-language application scripting
# depends	: kparts extra-cmake-modules kdoctools qt5 python3

name=kross
version=5.57.0
release=1
source=(http://download.kde.org/stable/frameworks/${version::4}/portingAids/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/usr	\
	      -DCMAKE_PREFIX_PATH=/usr		\
	      -DCMAKE_BUILD_TYPE=Release	\
	      -DBUILD_TESTING=OFF		\
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
	
	rm -r $PKG/usr/share/locale
        rm -r $PKG/usr/share/man/{ca,uk,nl,pt_BR,de,it,es,pt,sv}
}

md5sum=(c191e787bc5fed1f51305141e7fb4f55)
