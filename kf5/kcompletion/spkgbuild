# description	: Text completion helpers and widgets
# depends	: kwidgetsaddons kconfig extra-cmake-modules qt5

name=kcompletion
version=5.57.0
release=1
source=(http://download.kde.org/stable/frameworks/${version::4}/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/usr	\
	      -DCMAKE_PREFIX_PATH=/usr		\
	      -DCMAKE_BUILD_TYPE=Release	\
	      -DBUILD_TESTING=OFF		\
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
	
	rm -r $PKG/usr/share/locale
}

md5sum=(f33439a380b21163c1f04c780f7c820a)
