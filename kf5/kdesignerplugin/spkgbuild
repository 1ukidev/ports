# description	: Integration of Frameworks widgets in Qt Designer/Creator
# depends	: kplotting kio extra-cmake-modules qt5 kdoctools python3

name=kdesignerplugin
version=5.59.0
release=1
source=(https://download.kde.org/stable/frameworks/${version::4}/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/usr	\
	      -DCMAKE_PREFIX_PATH=/usr		\
	      -DCMAKE_BUILD_TYPE=Release	\
	      -DBUILD_TESTING=OFF		\
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
	
	rm -r $PKG/usr/share/locale
        rm -r $PKG/usr/share/man/{ca,uk,nl,pt_BR,de,it,pt,sv}
}

md5sum=(9330b5945822da085cfb9bdc21a7821c)
