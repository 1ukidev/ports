# description	: A QtQuick based components set
# makedepends	: extra-cmake-modules qt5

name=kirigami2
version=5.46.0
release=1
source=(http://download.kde.org/stable/frameworks/${version::4}/$name-$version.tar.xz)

build() {
	cd $name-$version

	export CXXFLAGS="${CXXFLAGS} -isystem /usr/include/openssl-1.0"

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/usr	\
	      -DCMAKE_PREFIX_PATH=/usr		\
	      -DCMAKE_BUILD_TYPE=Release	\
	      -DBUILD_TESTING=OFF		\
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
}

md5sum=(dce9d8af74cddf8c56ae1d3c5bdd3d6f)
