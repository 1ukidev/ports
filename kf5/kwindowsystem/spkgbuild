# description	: Access to the windowing system
# depends	: qt5 libxfixes extra-cmake-modules

name=kwindowsystem
version=5.59.0
release=1
source=(https://download.kde.org/stable/frameworks/${version::4}/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/usr	\
	      -DCMAKE_PREFIX_PATH=/usr		\
	      -DCMAKE_BUILD_TYPE=Release	\
	      -DBUILD_TESTING=OFF		\
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
	
	rm -r $PKG/usr/share/locale
}

md5sum=(ee0dd6e2c3c121b4f8924122c5ea6472)
