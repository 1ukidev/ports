# description	: Additional components to increase the functionality of KIO
# depends	: kio kdnssd exiv2 libmtp kpty kactivities extra-cmake-modules kdoctools gperf taglib khtml

name=kio-extras
version=19.04.0
release=1
source=(http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/usr	\
		 -DCMAKE_BUILD_TYPE=Release	\
		 -DBUILD_TESTING=OFF		\
		 -Wno-dev ..
	make
	make DESTDIR=$PKG install
	
	rm -r $PKG/usr/share/doc
        rm -r $PKG/usr/share/locale
}

md5sum=(e7334b634fff1317dd806d3a74e7ec2a)
