# description	: A system-independent interface for user-level packet capture
# homepage	: http://www.tcpdump.org/
# maintainer	: Emmett1, emmett1.2miligrams at gmail.com
# depends	: dbus glibc libnl libusb bash
# makedepends	: flex

name=libpcap
version=1.8.1
release=1
source=(http://www.tcpdump.org/release/$name-$version.tar.gz
	http://www.linuxfromscratch.org/patches/blfs/8.0/$name-$version-enable_bluetooth-1.patch)

build() {
	cd $name-$version

	patch -Np1 -i ../$name-$version-enable_bluetooth-1.patch

	./configure --prefix=/usr
	make

	#disable static libraries
	sed -i '/INSTALL_DATA.*libpcap.a\|RANLIB.*libpcap.a/ s/^/#/' Makefile
	make DESTDIR=$PKG install
}
md5sum=(3d48f9cd171ff12b0efd9134b52f1447
3ee31165d569dbcf29057a9ca581878d)
