# description	: BSD-style init (CRUX's init inspired)
# backup	: etc/rc.conf etc/rc.local
# depends	: sysvinit

name=rc
version=20181122
release=1
options=(!strip)
_commit=af1304b306e236e048b19eee8f00295d40e44de1
source=($name-$_commit.tar.gz::https://github.com/emmett1/rc/archive/$_commit.tar.gz)
md5sum=(85e83b5d4ae5d7b3688faa4fd4f89602)

build() {
	cd $name-$_commit
	make DESTDIR=$PKG install
	
}
