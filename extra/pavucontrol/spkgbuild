name=pavucontrol
version=3.0
release=1
source=(http://freedesktop.org/software/pulseaudio/pavucontrol/$name-$version.tar.xz)

build() {
	cd $name-$version
	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
}
