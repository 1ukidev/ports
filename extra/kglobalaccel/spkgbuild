# description	: Add support for global workspace shortcuts
# depends	: kdbusaddons kconfig kcrash extra-cmake-modules qt5

name=kglobalaccel
version=5.64.0
release=1
source=(https://download.kde.org/stable/frameworks/${version::4}/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/usr	\
	      -DCMAKE_PREFIX_PATH=/usr		\
	      -DCMAKE_BUILD_TYPE=Release	\
	      -DBUILD_TESTING=OFF		\
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
	
	rm -r $PKG/usr/share/locale
}

md5sum=(2e672c2bc14716b988e224b81772b569)
