# description	: Ruby FFI
# depends	: ruby

_name=ffi
name=ruby-$_name
version=1.12.1
release=2
options="!emptydirs"
source="https://rubygems.org/downloads/$_name-$version.gem"

build() {
	_gemdir="$(ruby -e'puts Gem.default_dir')"

	gem install \
		--ignore-dependencies \
		--no-user-install \
		--no-document \
		-i "$PKG/$_gemdir" \
		$_name-$version.gem

	rm "$PKG/$_gemdir/cache/$_name-$version.gem"
}
