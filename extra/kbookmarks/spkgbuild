# description	: Support for bookmarks and the XBEL format
# depends	: kxmlgui extra-cmake-modules qt5 python3

name=kbookmarks
version=5.64.0
release=1
source=(https://download.kde.org/stable/frameworks/${version::4}/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/usr	\
	      -DCMAKE_PREFIX_PATH=/usr		\
	      -DCMAKE_BUILD_TYPE=Release	\
	      -DBUILD_TESTING=OFF		\
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
	
	rm -r $PKG/usr/share/locale
}

md5sum=(3f8fc9273ab02e29b747ccd993f6f82d)
