# description	: BSD-style init-script
# backup	: etc/rc.conf

name=rc-init-git
version=0.2
release=1
source=()

build() {
	cd $SOURCE_DIR
	
	if cd $name; then
		git fetch -q; git reset --hard origin/master
	else
		git clone https://github.com/emmett1/rc-init $name
		cd $name
	fi

	DESTDIR=$PKG ./INSTALL.sh
}
