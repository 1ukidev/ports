# description	: Support for emoticons and emoticons themes
# depends	: karchive kservice extra-cmake-modules python3 mesa qt5

name=kemoticons
version=5.59.0
release=1
source=(https://download.kde.org/stable/frameworks/${version::4}/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/usr	\
	      -DCMAKE_PREFIX_PATH=/usr		\
	      -DCMAKE_BUILD_TYPE=Release	\
	      -DBUILD_TESTING=OFF		\
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
}

md5sum=(2d8c1d5a97cea381b75ffebf8f77afbb)
