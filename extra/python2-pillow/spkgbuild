# description	: Python Imaging Library (PIL) fork (python2)
# conflict	: python2-imaging
# depends	: python2 
# makedepends	: python2-setuptools freetype2

name=python2-pillow
version=5.1.0
release=1
source=(https://files.pythonhosted.org/packages/source/P/Pillow/Pillow-$version.tar.gz)
md5sum=(308f9c13b376abce96ab6ebd6c889cc4)

build() {
	cd Pillow-$version
	python2 setup.py build
	python2 setup.py install --root="$PKG" --optimize=1

	install -dm755 "$PKG/usr/include/python2.7/"
	install -m644 -t "$PKG/usr/include/python2.7/" src/libImaging/*.h
}
