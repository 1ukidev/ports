# description	: The MATE terminal emulator
# depends	: vte3

name=mate-terminal
version=1.22.1
release=1
source=(http://pub.mate-desktop.org/releases/${version:0:4}/$name-$version.tar.xz)

build() {
	cd $name-$version
	./configure --prefix=/usr --disable-nls
	make
	make DESTDIR=$PKG install
	rm -r $PKG/usr/share/locale
}
