#
# /etc/rc.d/sddm: start/stop sddm service
#

NAME="SDDM"
PROG=/usr/bin/sddm

sv_start() {
	msg "Starting $NAME..."
	start_service $PROG &
}

sv_stop() {
	msg "Stopping $NAME..."
	stop_service $PROG
}

sv_status() {
	status_service $PROG
}

sv_restart() {
	sv_stop
	sleep 1
	sv_start
}

sv_usage() {
	echo "usage: [start|stop|restart|status]"
}

# End of file
