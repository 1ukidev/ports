# description	: MATE themes
# depends	: gtk2

name=mate-themes
version=3.22.20
release=1
source="http://pub.mate-desktop.org/releases/themes/${version:0:4}/$name-$version.tar.xz"

build() {
	cd $name-$version
	./configure --prefix=/usr --disable-nls
	make
	make DESTDIR=$PKG install
	rm -r $PKG/usr/share/locale
}

