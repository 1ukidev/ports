# description	: C library for parsing and emitting YAML (YAML Ain't Markup Language)

name=yaml
version=0.1.7
release=1
source=(http://pyyaml.org/download/libyaml/$name-$version.tar.gz)
md5sum=(1abf45bd3a96374fa55ca63b32f9f2f9)

build() {
	cd $name-$version
	./configure --prefix=/usr --disable-static
	make
	make DESTDIR=$PKG install
}
