# description	: A library that reads information about processes and the running system
# depends	: glib libxau gobject-introspection

name=libgtop
version=2.38.0
release=1
source="https://download.gnome.org/sources/libgtop/${version%.*}/$name-$version.tar.xz"

build() {
	cd $name-$version
	./configure --prefix=/usr --disable-nls
	make
	make DESTDIR=$PKG install
	rm -r $PKG/usr/share/info $PKG/usr/share/gtk-doc
}
