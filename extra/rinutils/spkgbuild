# description	: C11 / gnu11 utilities C library
# homepage	: https://www.shlomifish.org/open-source/projects/
# depends	: cmake

name=rinutils
version=0.1.4
release=1
source=(https://github.com/shlomif/rinutils/releases/download/$version/$name-$version.tar.xz)
md5sum=(63e74f531f6fd8c91d3c9c526d730455)

build() {
	cd $name-$version

	mkdir build
	cd build

	cmake .. \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$PKG install
}
