# description	: A simple package manager for Linux From Scratch
# backup	: etc/scratchpkg.conf
# depends	: coreutils bash wget httpup

name=scratchpkg
version=20180228
release=1
_commit=28bcd121cd75b8d970df8e4fe6cf4cb48e860580
source=($name-$version.tar.gz::https://github.com/emmett1/scratchpkg/archive/$_commit.tar.gz)

build() {
	cd $name-$_commit
	DESTDIR=$PKG ./INSTALL.sh
}
