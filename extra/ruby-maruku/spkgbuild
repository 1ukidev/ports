# description	: Markdown-superset interpreter written in Ruby
# depends	: ruby

_name=maruku
name=ruby-$_name
version=0.7.3
release=2
options="!emptydirs"
source="https://rubygems.org/downloads/$_name-$version.gem"

build() {
	_gemdir="$(gem env gemdir)"

	gem install \
		--ignore-dependencies \
		--no-user-install \
		--no-document \
		-i "$PKG/$_gemdir" \
		$_name-$version.gem

	rm "$PKG/$_gemdir/cache/$_name-$version.gem"
}
