# description	: Mixer library for MATE Desktop
# depends	: glib alsa-lib

name=libmatemixer
version=1.22.0
release=1
source=(http://pub.mate-desktop.org/releases/${version:0:4}/$name-$version.tar.xz)

build() {
	cd $name-$version
	./configure --prefix=/usr --disable-nls
	make
	make DESTDIR=$PKG install
	rm -r $PKG/usr/share
}
