# description	: Extremely fast compression algorithm
# depends	: glibc

name=lz4
version=1.8.1.2
release=2
source=($name-$version.tar.gz::https://github.com/lz4/lz4/archive/v1.8.1.2.tar.gz)

build() {
	cd $name-$version
	make PREFIX=/usr
	make DESTDIR=$PKG PREFIX=/usr install
}

md5sum=(343538e69ba752a386c669b1a28111e2)
