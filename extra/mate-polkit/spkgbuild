# description	: PolicyKit integration for the MATE desktop
# depends	: polkit

name=mate-polkit
version=1.22.0
release=1
source=(http://pub.mate-desktop.org/releases/${version:0:4}/$name-$version.tar.xz)

build() {
	cd $name-$version
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib/$name \
		--disable-nls
	make
	make DESTDIR=$PKG install
	rm -r $PKG/usr/share
}
