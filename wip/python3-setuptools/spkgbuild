# description	: Easily download, build, install, upgrade, and uninstall Python packages
# depends	: python3

name=python3-setuptools
version=39.1.0
release=1
source=($name-$version.tar.gz::https://github.com/pypa/setuptools/archive/v$version.tar.gz)
md5sum=(64bd5869c9a11d5f19613ee71f9c7423)

build() {
	cd setuptools-$version
	python3 bootstrap.py
	python3 setup.py build
	python3 setup.py install --prefix=/usr --root="$PKG" --optimize=1 --skip-build
	rm -fr $PKG/usr/lib/python3.6/site-packages/setuptools/
	rm -fr $PKG/usr/lib/python3.6/site-packages/pkg_resources/
	rm -fr $PKG/usr/lib/python3.6/site-packages/easy_install.py{,c}
	rm -fr $PKG/usr/bin/
	rm $PKG/usr/lib/python3.6/site-packages/__pycache__/easy_install.cpython-36.pyc
}
