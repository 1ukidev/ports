# description	: A browser plugin designed for the viewing of premium video content
# depends	: qtwebengine

name=qt5-webengine-widevine
version=65.0.3325.181
release=1
options=(!strip)
_channel=stable
source=(google-chrome-${_channel}_${version}_amd64.deb::https://dl.google.com/linux/direct/google-chrome-${_channel}_current_amd64.deb)
md5sum=(SKIP)

build() {
	bsdtar -xf google-chrome-${_channel}_${version}_amd64.deb
	bsdtar -xf data.tar.xz

	cd opt/google/chrome
	install -Dm644 libwidevinecdm.so -t "$PKG/usr/lib/qt5/plugins/ppapi/"
	install -Dm644 libwidevinecdmadapter.so -t "$PKG/usr/lib/qt5/plugins/ppapi/"
}

