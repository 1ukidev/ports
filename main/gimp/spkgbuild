# description	: GNU Image Manipulation Program
# depends	: gegl appstream-glib json-glib gtk2 mypaint-brushes1 gexiv2 poppler-glib glib-networking gtk3 librsvg libgudev

name=gimp
version=2.10.32
release=2
source="https://download.gimp.org/pub/$name/v${version%.*}/$name-$version.tar.bz2
	babl.patch
	fix-new-cairo-curves.patch
	int-conv.patch"

build() {
	cd $name-$version
	
	patch -Np1 -i $SRC/babl.patch
	patch -Np1 -i $SRC/fix-new-cairo-curves.patch
	patch -Np1 -i $SRC/int-conv.patch

	  ./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib/$name \
		--disable-nls \
		--disable-python \
		--enable-mp \
		--disable-check-update \
		--without-aa 
	make
	make DESTDIR=$PKG install

}
