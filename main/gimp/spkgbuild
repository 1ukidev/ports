# description	: GNU Image Manipulation Program
# depends	: appstream-glib babl dbus-glib desktop-file-utils gegl gexiv2 gtk2 gtk3 intltool iso-codes json-glib poppler-glib librsvg libxpm libxmu libexif libjpeg-turbo libpng lcms2 mypaint-brushes1 xz

name=gimp
version=2.10.30
release=1
source="https://download.gimp.org/pub/$name/v${version%.*}/$name-$version.tar.bz2"

build() {
	cd $name-$version

	  ./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib/$name \
		--disable-nls \
		--disable-python \
		--enable-mp \
		--disable-check-update \
		--without-aa 
	make
	make DESTDIR=$PKG install

}
