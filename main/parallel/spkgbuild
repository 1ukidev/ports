# description	: A shell tool for executing jobs in parallel

name=parallel
version=20220722
release=1
source="https://ftp.gnu.org/gnu/$name/$name-$version.tar.bz2"

build() {
	cd $name-$version
  
	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
	if [ -f /usr/share/bash-completion/completions/parallel ]
	then
		rm -r  $PKG/usr/share/bash-completion
	fi
	if [ -f /usr/share/zsh/site-functions/_parallel ]
	then
		 rm -r $PKG/usr/share/zsh
	fi
}
