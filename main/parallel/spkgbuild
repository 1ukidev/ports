# description	: A shell tool for executing jobs in parallel

name=parallel
version=20220722
release=1
source="https://ftp.gnu.org/gnu/$name/$name-$version.tar.bz2"

build() {
	cd $name-$version
	
	rm -rf /usr/share/bash-completion/completions/parallel
	rm -rf /usr/share/zsh/site-functions/_parallel

	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
}
