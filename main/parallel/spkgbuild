# description	: A shell tool for executing jobs in parallel

name=parallel
version=20220722
release=1
source="https://ftp.gnu.org/gnu/$name/$name-$version.tar.bz2
	fix-makefile.patch"

build() {
	cd $name-$version
  
	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
	[ -f /usr/share/bash-completion/completions/parallel ] && rm -r  $PKG/usr/share/bash-completion
	[ -f /usr/share/zsh/site-functions/_parallel ] && rm -r $PKG/usr/share/zsh
}
