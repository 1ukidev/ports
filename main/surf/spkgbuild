# description	: WebKit based browser
# depends	: webkitgtk gtk3 pango harfbuzz atk cairo gdk-pixbuf libsoup glib libx11 gcr p11-kit

name=surf
version=2.1
release=1
source="https://dl.suckless.org/$name/$name-$version.tar.gz"

build() {
	cd $name-$version
	
	if [[ -f ../config.h ]]; then
		echo "Found custom config.h in $(readlink -f ../), copying..."
	        cp -v ../config.h $name-$version/config.h
	fi

	make PREFIX=/usr
	make PREFIX=/usr DESTDIR=$PKG install
}
