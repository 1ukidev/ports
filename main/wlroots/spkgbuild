# description	: Modular Wayland compositor library 
# depends	: libinput libxkbcommon pixman xcb-util-image xcb-util-wm meson ninja wayland-protocols xcb-util-errors mesa libseat

name=wlroots
version=0.15.1
release=1
source="https://gitlab.freedesktop.org/wlroots/wlroots/-/archive/$version/wlroots-$version.tar.gz ffmpeg-5.patch"

build() {
	cd $name-$version
	patch -p1 -u < ../ffmpeg-5.patch
	venom-meson build
	meson compile -C build
	DESTDIR=$PKG meson install -C build
}
