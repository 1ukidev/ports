# description	: Interface to enumerating power devices, listening to device events and querying history and statistics
# depends	: dbus-glib libgudev libusb polkit gobject-introspection

name=upower
version=0.99.12
release=1
source="https://gitlab.freedesktop.org/upower/upower/uploads/244f5966c58773bbd3b4c507c549560f/upower-$version.tar.xz"

build() {
ls
	cd $name-$version

	./configure --prefix=/usr \
	            --sysconfdir=/etc \
		    --libexecdir=/usr/lib/$name \
	            --localstatedir=/var \
	            --enable-deprecated \
	            --disable-static
	make
	make DESTDIR=$PKG install
}
