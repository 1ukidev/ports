# description	: OpenGL compatible 3D graphics library
# depends	: python3-mako llvm elfutils bison flex libxext libxdamage libxshmfence libxxf86vm libxrandr libdrm libglvnd libvdpau libva

name=mesa
version=22.1.1
release=1
source="https://mesa.freedesktop.org/archive/$name-$version.tar.xz"

build() {
	cd $name-$version

	mkdir build
	cd    build
	
	meson \
		--prefix=/usr \
		--sysconfdir=/etc \
		--buildtype=plain \
		--wrap-mode nodownload \
		-D b_lto=true \
		-D b_pie=true \
		-D dri3=enabled \
		-D egl=enabled \
		-D llvm=enabled \
		-D shared-llvm=enabled \
		-D gbm=enabled \
		-D gles1=disabled \
		-D gles2=enabled \
		-D glx=dri \
		-D osmesa=true \
		-D gallium-xa=enabled \
		-D gallium-drivers=r300,r600,svga,swrast,radeonsi,nouveau,iris,virgl \
		-D platforms=x11 \
		-D shared-glapi=enabled \
		-D vulkan-drivers=amd,intel \
		-D glvnd=true \
		-D gallium-vdpau=enabled \
	      ..
	ninja
	DESTDIR=$PKG ninja install

	# indirect rendering symlink
	ln -s libGLX_mesa.so.0 $PKG/usr/lib/libGLX_indirect.so.0
}
