# description	: Modular initramfs image creation utility
# depends	: libarchive

name=mkinitramfs
version=20220427
release=1
backup="etc/mkinitramfs.conf"
source="https://github.com/venomlinux/mkinitramfs/archive/8fae073690ac7ea49f0951ea3355b6196eca7a12.tar.gz
	mkinitramfs.conf
	base.hook"

build() {
	cd $name-8fae073690ac7ea49f0951ea3355b6196eca7a12
	DESTDIR=$PKG ./INSTALL.sh
	install -m644 $SRC/mkinitramfs.conf $PKG/etc/
	install -m644 $SRC/base.hook $PKG/usr/share/mkinitramfs/hooks/base.hook
}
