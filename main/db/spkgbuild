# description	: The Berkeley DB embedded database system
# depends	: bash

name=db
version=6.2.32
release=1
source="http://download.oracle.com/berkeley-db/${name}-${version}.tar.gz"

build() {
	cd $name-$version/build_unix

	../dist/configure \
		--prefix=/usr \
		--enable-compat185 \
		--disable-static \
		--enable-cxx \
		--enable-dbm
	make
	make DESTDIR=$PKG install

	rm -r $PKG/usr/docs
}
