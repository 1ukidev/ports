# description	: C-Extensions for Python3
# depends	: python3

name=cython3
version=0.29.31
release=1
source="$name-$version.tar.gz::https://files.pythonhosted.org/packages/e3/96/ff430960a664e571285365009bf526fa8ec67267a9632b758914adf9206c/Cython-$version.tar.gz"

build() {
	cd Cython-$version
	python3 setup.py build
	python3 setup.py install --root=$PKG --optimize=1
}
