# description	: flameshot
# depends	: qt5 gcc cmake

name=flameshot
version=0.10.2
release=1
source="https://github.com/flameshot-org/"$name"/archive/refs/tags/v"$version".tar.gz"

build() {
	cd $name-$version
	cat CMakeLists.txt
	mkdir build
	cd build	

	cmake ../ -DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$PKG install
}
