# description   : astyle A Free, Fast, and Small Automatic Formatter for C, C++, C++/CLI, Objectiveâ€‘C, C#, and Java Source Code
# depends       : glibc

name=astyle
version=3.3.1
release=1
source="$name-$version.tar.bz2::https://sourceforge.net/projects/astyle/files/astyle/$name"%20"${version%.*}/$name-${version}.tar.bz2"

build() {
    cmake -S $name-$version -B build \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_CXX_FLAGS_RELEASE="$CXXFLAGS" \
		-Wno-dev 
    cmake --build build
    DESTDIR=$PKG cmake --install build
}
