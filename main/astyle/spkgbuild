# description   : astyle A Free, Fast, and Small Automatic Formatter for C, C++, C++/CLI, Objectiveâ€‘C, C#, and Java Source Code
# depends       : glibc

name=astyle
version=3.1
release=1
source="$name-$version.tar.gz::https://cytranet.dl.sourceforge.net/project/$name/$name/$name"%20"$version/"$name"_"$version"_linux.tar.gz"

build() {
    cmake -S $name -B build \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_CXX_FLAGS_RELEASE="$CXXFLAGS" \
		-Wno-dev 
    cmake --build build
    DESTDIR=$PKG cmake --install build
}
