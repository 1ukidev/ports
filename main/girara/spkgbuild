# description	: UI library that focuses on simplicity and minimalism
# depends	: meson glib json-c gtk3 pkgconf json-glib

name=girara
version=0.3.9
release=2
source="https://pwmt.org/projects/girara/download/$name-$version.tar.xz
	$name-glib2.76.patch::https://git.pwmt.org/pwmt/girara/-/commit/6926cc1234853ccf3010a1e2625aafcf462ed60e.patch"

build() {
	patch -d $name-$version -Np1 -i $SRC/$name-glib2.76.patch

	venom-meson $name-$version build \
		--libexecdir=/usr/lib/$name \
		-D json=enabled \
		-D docs=disabled \
		-D notify=disabled 
	meson compile -C build
	DESTDIR=$PKG meson install -C build
}
