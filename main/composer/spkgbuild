# description	: Dependency Manager for PHP 
# homepage	: https://getcomposer.org/
# depends	: php unzip

name=composer
version=2.1.0
release=1
source="https://github.com/composer/composer/releases/download/$version/composer.phar"

build() {

	install -Dm755 composer.phar "${PKG}/usr/bin/composer"
}
