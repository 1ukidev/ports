# description	    : A simple, correct PEP517 package builder
# homepage	    : https://github.com/pypa/build
# depends	    : python3-setuptools python3-packaging python3-pep517 python3-tomli python3-wheel python3-pyproject-hooks

name=python3-build
version=0.10.0
release=2
source="h$name-$version.tar.gz::https://pypi.python.org/packages/source/b/build/build-$version.tar.gz"

build() {
	cd build-$version
	python3 -m build --wheel --skip-dependency-check --no-isolation
	python3 -m installer --destdir=$PKG dist/*.whl
}
