# description	: Library to create an ISO-9660 filesystem with extensions like RockRidge or Joliet
# depends	: zlib acl

name=libisofs
version=1.5.4
release=1
source="$name-$version.tar.gz::https://dev.lovelyhq.com/libburnia/libisofs/archive/release-$version.tar.gz"

build() {
	cd $name
	./bootstrap
	./configure --prefix=/usr --disable-static
	make
	make DESTDIR=$PKG install
}
