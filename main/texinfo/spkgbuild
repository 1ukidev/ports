# description	: Programs for reading, writing, and converting info pages
# depends	: ncurses

name=texinfo
version=6.8
release=1
source="https://ftp.gnu.org/gnu/texinfo/$name-$version.tar.xz"

build() {
	cd $name-$version

	./configure --prefix=/usr --disable-static
	make
	make DESTDIR=$PKG install

}
