# description	: Combined X.Org X11 Protocol headers
# depends	: meson util-macros

name=xorgproto
version=2019.1
release=2
source=(https://xorg.freedesktop.org/archive/individual/proto/$name-$version.tar.bz2)
md5sum=(802ccb9e977ba3cf94ba798ddb2898a4)

build() {
	cd $name-$version

	mkdir build
	cd build
	
	meson --prefix=/usr
	ninja
	DESTDIR=$PKG ninja install

	# part of libxvmc
	rm $PKG/usr/include/X11/extensions/vldXvMC.h
}
