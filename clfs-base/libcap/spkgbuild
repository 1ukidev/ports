# description	: Implements the user-space interfaces to the POSIX 1003.1e capabilities available in Linux kernels
# depends	: attr glibc linux-headers

name=libcap
version=2.25
release=1
source=(https://www.kernel.org/pub/linux/libs/security/linux-privs/libcap2/$name-$version.tar.xz)

build() {
	cd $name-$version

	make CC="gcc -m64"

	make lib=lib64 DESTDIR=$PKG RAISE_SETFCAP=no install
	chmod -v 755 $PKG/lib64/libcap.so.2.25

	ln -sfv ../../lib64/$(readlink $PKG/lib64/libcap.so) $PKG/usr/lib64/libcap.so
	rm -v $PKG/lib64/libcap.so
	mv -v $PKG/lib64/libcap.a $PKG/usr/lib64
}