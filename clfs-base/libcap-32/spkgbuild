# description	: Implements the user-space interfaces to the POSIX 1003.1e capabilities available in Linux kernels (32 bit)
# depends	: attr glibc linux-headers

name=libcap-32
version=2.25
release=1
source=(https://www.kernel.org/pub/linux/libs/security/linux-privs/libcap2/libcap-$version.tar.xz)

build() {
	cd libcap-$version

	make CC="gcc -m32"

	make lib=lib DESTDIR=$PKG RAISE_SETFCAP=no install
	chmod -v 755 $PKG/lib/libcap.so.2.25

	ln -sfv ../../lib/$(readlink $PKG/lib/libcap.so) $PKG/usr/lib/libcap.so
	rm -v $PKG/lib/libcap.so
	mv -v $PKG/lib/libcap.a $PKG/usr/lib

	rm -fr $PKG/usr/{share,include} $PKG/sbin
}