# description	: Themes for geany
# depends	: geany git

name=geany-themes
version=git
release=1
options=(!strip)
gitsource=(https://github.com/codebrainz/geany-themes)

get_git() {	
	if [[ -d "$SOURCE_DIR/$name" ]]; then
		git -C "$SOURCE_DIR/$name" fetch -q
		git -C "$SOURCE_DIR/$name" reset --hard origin/$2
	else
		git -C "$SOURCE_DIR" clone $1 "$name"
	fi

	cp -r "$SOURCE_DIR/$name" "$SRC"
}

build() {
	get_git $gitsource master
	cd $name

	mkdir -pv $PKG/usr/share/geany/colorschemes/
	cp -v colorschemes/*.conf $PKG/usr/share/geany/colorschemes/
}
