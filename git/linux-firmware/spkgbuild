# description	: Firmware files for Linux
# homepage	: http://git.kernel.org/?p=linux/kernel/git/firmware/linux-firmware.git;a=summary
# maintainer	: Emmett1, emmett1.2miligrams at gmail.com
# makedepends	: git

name=linux-firmware
version=git
release=1
options=(!strip)
gitsource=(git://git.kernel.org/pub/scm/linux/kernel/git/firmware/linux-firmware)

get_git() {	
	if [[ -d "$SOURCE_DIR/$name" ]]; then
		git -C "$SOURCE_DIR/$name" fetch -q
		git -C "$SOURCE_DIR/$name" reset --hard origin/$2
	else
		git -C "$SOURCE_DIR" clone $1 "$name"
	fi

	cp -r "$SOURCE_DIR/$name" "$SRC"
}

build() {
	get_git $gitsource master
	cd $name

	make DESTDIR=$PKG install
	rm $PKG/lib/firmware/{Makefile,README,configure,GPL-3,*.txt,check_whence.py}
}
