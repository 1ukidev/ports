# description	: Window manager with the goals of speed, simplicity, and not getting in the user's way
# depends	: libxrandr libxft libsm libxinerama gdk-pixbuf mkfontscale

name=icewm
version=1.6.1
release=1
source=($name-$version.tar.gz::https://github.com/ice-wm/icewm/archive/$version.tar.gz)
md5sum=(7b4ebb3080239c649e7e9d408d075e14)

build() {
	cd $name-$version

	./autogen.sh
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--disable-nls
	make
	make DESTDIR=$PKG install
	rm -r $PKG/usr/share/doc
}
