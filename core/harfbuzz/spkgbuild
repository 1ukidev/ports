# description	: OpenType text shaping engine
# depends	: glib freetype2 icu

name=harfbuzz
version=1.8.4
release=1
source=(https://www.freedesktop.org/software/$name/release/$name-$version.tar.bz2)
md5sum=(f176eeda0a4e51a056d3ea6b9e65c27f)

build() {
	cd $name-$version

	./configure --prefix=/usr --with-gobject
	make
	make DESTDIR=$PKG install
}
