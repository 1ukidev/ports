# description	: OpenType text shaping engine
# depends	: glib freetype2 icu graphite2

name=harfbuzz
version=2.5.1
release=2
source=($name-$version-2.tar.xz::https://www.freedesktop.org/software/$name/release/$name-$version.tar.xz)
md5sum=(7d19d1f610472285b3e47f5c45831b84)

build() {
	cd $name-$version

	./configure --prefix=/usr --with-gobject --with-graphite2
	make
	make DESTDIR=$PKG install

	rm -r $PKG/usr/share/gtk-doc
}
