# description	: A compositor for X11
# depends	: libconfig dbus libev libxdg-basedir uthash xcb-util-renderutil xcb-util-image libxext pixman libglvnd

name=compton
version=8
release=1
source="$name-$version.tar.gz::https://github.com/yshui/compton/archive/v$version.tar.gz"

build() {
	cd picom-$version

	mkdir build

	meson --prefix=/usr --buildtype=release . build
	ninja -C build
	DESTDIR=$PKG ninja -C build install
}
