# description	: GNU Image Manipulation Program
# homepage	: http://www.gimp.org/
# maintainer	: Emmett1, emmett1.2miligrams at gmail.com
# depends	: gegl json-glib python2-gtk gtk2 mypaint-brushes gexiv2

name=gimp
version=2.10.0
release=1
source=(http://download.gimp.org/pub/$name/v${version%.*}/$name-$version.tar.bz2)
md5sum=(5e91357ede5a5d5cb0db981ff8f9726c)

build() {
	cd $name-$version

	# Fix a pkgconfig file error which prevents some extensions from building
	sed -i 's/gegl-0.3/gegl-0.4/' gimp.pc.in

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc
	make
	make DESTDIR=$PKG install
}
