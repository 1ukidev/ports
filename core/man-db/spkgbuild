# description	: Programs for finding and viewing man pages
# homepage	: https://www.nongnu.org/man-db/
# maintainer	: emmett1, emmett1.2miligrams at gmail.com
# depends	: bash gdbm groff less libpipeline zlib

name=man-db
version=2.8.6.1
release=1
source=(https://download.savannah.gnu.org/releases/$name/$name-$version.tar.xz)
md5sum=(22e82fe1127f4ca95de7100168a927d1)

build() {
	cd $name-$version

	./configure --prefix=/usr \
	            --sysconfdir=/etc \
		    --libexecdir=/usr/lib \
	            --disable-setuid \
	            --enable-cache-owner=bin \
	            --with-browser=/usr/bin/lynx \
	            --with-vgrind=/usr/bin/vgrind \
	            --with-grap=/usr/bin/grap \
	            --with-systemdtmpfilesdir= \
		    --disable-nls
	make
	make DESTDIR=$PKG install

	rm -r $PKG/usr/share/doc $PKG/lib/systemd/
}
