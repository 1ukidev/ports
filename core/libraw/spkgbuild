# description	: Library for reading RAW files obtained from digital photo cameras
# homepage	: https://www.libraw.org/
# maintainer	: Emmett1, emmett1.2miligrams at gmail.com
# depends	: jasper lcms2 libjpeg-turbo 

name=libraw
version=0.19.4
release=1
source=(https://www.libraw.org/data/LibRaw-$version.tar.gz)
md5sum=(9f645409e1d59422ebcb85f9302b893f)

build() {
	cd LibRaw-$version

	./configure --prefix=/usr    \
	            --enable-jpeg    \
	            --enable-jasper  \
	            --enable-lcms    \
	            --disable-static
	make
	make DESTDIR=$PKG install

	rm -r $PKG/usr/share
}

