# description	: An implementation of the DHCP client specified in RFC2131
# homepage	: http://roy.marples.name/projects/dhcpcd/
# maintainer	: emmett1, emmett1.2miligrams at gmail.com
# backup	: etc/conf.d/network

name=dhcpcd
version=7.0.3
release=2
source=(http://roy.marples.name/downloads/$name/$name-$version.tar.xz
	https://raw.githubusercontent.com/emmett1/rc-init/master/conf.d/network
	https://raw.githubusercontent.com/emmett1/rc-init/master/rc.d/rc.network)

build() {
	cd $name-$version

  	./configure --libexecdir=/lib/dhcpcd \
	            --dbdir=/var/lib/dhcpcd
	make
	make DESTDIR=$PKG install

	# daemon files
	install -Dm644 $SRC/rc.network $PKG/etc/rc.d/rc.network

	# daemon's config file
	install -Dm644 $SRC/network $PKG/etc/conf.d/network
}

