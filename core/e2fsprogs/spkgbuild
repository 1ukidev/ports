# description	: utilities for handling the ext2, ext3 and ext4 file system
# homepage	: http://e2fsprogs.sourceforge.net/
# depends	: bash bc

name=e2fsprogs
version=1.45.3
release=1
source=(https://downloads.sourceforge.net/project/$name/$name/v$version/$name-$version.tar.gz)
md5sum=(447a225c05f0a81121f6ddffbf55b06c)

build() {
	cd $name-$version

	mkdir -v build
	cd build

	../configure --prefix=/usr           \
	             --bindir=/bin           \
	             --with-root-prefix=""   \
	             --enable-elf-shlibs     \
	             --disable-libblkid      \
	             --disable-libuuid       \
	             --disable-uuidd         \
	             --disable-fsck          \
		     --disable-nls
	make
	make DESTDIR=$PKG install
	make DESTDIR=$PKG install-libs

	chmod -v u+w $PKG/usr/lib/{libcom_err,libe2p,libext2fs,libss}.a

	rm -r $PKG/usr/share/info
}
