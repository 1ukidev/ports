# description	: Unprivileged sandboxing tool
# homepage	: https://github.com/projectatomic/bubblewrap
# depends	: libcap

name=bubblewrap
version=0.3.3
release=1
source=($name-$version.tar.gz::https://github.com/containers/bubblewrap/archive/v$version.tar.gz)
md5sum=(2554fdc44689dc78f4d65a46574cf631)

build() {
	cd $name-$version

	NOCONFIGURE=1 ./autogen.sh
	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
}
