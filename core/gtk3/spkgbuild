# description	: Libraries used for creating graphical user interfaces for applications
# depends	: adwaita-icon-theme at-spi2-atk gdk-pixbuf libepoxy pango python3-six wayland wayland-protocols libxkbcommon gobject-introspection
# optdepends	: colord cups docbook-utils gtk-doc json-glib

name=gtk3
version=3.24.5
release=1
source=(https://ftp.gnome.org/pub/gnome/sources/gtk+/${version::4}/gtk+-$version.tar.xz
	gtk-query-immodules-3.0.hook)
md5sum=(32862355c08f6af3e7848c695cd4081b
	f646a81b85c711a2f475fdfe5f6c464e)

build() {
	cd gtk+-$version

	./configure --prefix=/usr             \
	            --sysconfdir=/etc         \
	            --enable-broadway-backend \
	            --enable-x11-backend      \
	            --enable-wayland-backend

	make
	make DESTDIR=$PKG install

	rm -r $PKG/usr/share/{locale,gtk-doc,gtk-3.0}

	rm $PKG/usr/bin/gtk-update-icon-cache

	cat > $PKG/etc/gtk-3.0/settings.ini << "EOF"
[Settings]
gtk-icon-theme-name = Adwaita
gtk-theme-name = Adwaita
gtk-font-name = Cantarell 10
gtk-cursor-theme-size = 18
gtk-toolbar-style = GTK_TOOLBAR_BOTH_HORIZ
gtk-xft-antialias = 1
gtk-xft-hinting = 1
gtk-xft-hintstyle = hintslight
gtk-xft-rgba = rgb
gtk-cursor-theme-name = Adwaita
EOF

	install -Dm644 $SRC/gtk-query-immodules-3.0.hook $PKG/etc/hooks/gtk-query-immodules-3.0.hook
}
