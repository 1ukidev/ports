# description	: The GNU Database Manager

name=gdbm
version=1.19
release=1
source="https://ftp.gnu.org/gnu/$name/$name-$version.tar.gz"

build() {
	cd $name-$version

	./configure --prefix=/usr \
	            --disable-static \
		    --disable-nls \
	            --enable-libgdbm-compat
	make
	make DESTDIR=$PKG install
}
