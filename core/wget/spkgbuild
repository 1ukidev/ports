# description	: Utility useful for non-interactive downloading of files from the Web
# depends	: ca-certificates openssl pcre util-linux libidn2

name=wget
version=1.19.5
release=1
source=(http://ftp.gnu.org/gnu/$name/$name-$version.tar.gz)
md5sum=(2db6f03d655041f82eb64b8c8a1fa7da)

build() {
	cd $name-$version

  	./configure --prefix=/usr      \
	            --sysconfdir=/etc  \
	            --with-ssl=openssl
	make
	make DESTDIR=$PKG install
}
