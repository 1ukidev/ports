# description	: Plugins for various audio libraries and sound servers
# depends	: alsa-lib

name=alsa-plugins
version=1.1.6
release=1
source=(ftp://ftp.alsa-project.org/pub/plugins/alsa-plugins-1.1.6.tar.bz2)

build() {
	cd $name-$version
	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
}
