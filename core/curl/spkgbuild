# description	: Utility and a library used for transferring files
# depends	: ca-certificates openssl zlib

name=curl
version=8.1.0
release=2
source="https://curl.haxx.se/download/$name-$version.tar.xz
	curl-regression-8.1.patch
	curl-regression-8.1-header.patch"

build() {
	cd $name-$version

	patch -Np1 -i $SRC/curl-regression-8.1.patch
	patch -Np1 -i $SRC/curl-regression-8.1-header.patch

	./configure \
		--prefix=/usr \
		--disable-static \
		--enable-threaded-resolver \
		--with-ca-bundle=/etc/ssl/certs/ca-certificates.crt \
		--with-openssl \
		--without-brotli \
		--without-libidn2 \
		--without-libpsl \
		--without-librtmp \
		--without-nghttp2 \
		--without-zstd 
	make
	make DESTDIR=$PKG install
}
