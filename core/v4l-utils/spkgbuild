# description	: Provides a series of utilities for media devices
# depends	: alsa-lib glu libjpeg-turbo qt5

name=v4l-utils
version=1.14.2
release=1
source=(https://www.linuxtv.org/downloads/v4l-utils/$name-$version.tar.bz2)

build() {
	cd $name-$version
	
	./configure --prefix=/usr     \
	            --sysconfdir=/etc \
	            --disable-static
	make
	make -j1 DESTDIR=$PKG install
}

md5sum=(330f265c49122042b2340e4257a5c753)
