# description	: Library which provides access to hardware accelerated video processing
# depends	: mesa libdrm

name=libva
version=2.4.1
release=1
source=(https://github.com/01org/libva/releases/download/$version/$name-$version.tar.bz2)
md5sum=(5b5ace9de3f07cb7b8f4d19b6979adf0)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}
