# description	: Certificate Authority certificates, the Public Key Infrastructure
# depends	: openssl ca-certificates-utils

name=ca-certificates
version=20180511
release=2
source=(certdata-$version.txt::https://hg.mozilla.org/releases/mozilla-release/raw-file/default/security/nss/lib/ckfw/builtins/certdata.txt)
md5sum=(SKIP)

build() {
  	/usr/sbin/make-ca -D $PKG -C certdata-$version.txt
}
