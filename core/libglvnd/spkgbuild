# description	: The GL Vendor-Neutral Dispatch library

name=libglvnd
version=1.2.0
release=1
source=($name-$version.tar.gz::https://github.com/NVIDIA/libglvnd/archive/v$version.tar.gz)
md5sum=(8182fa21dd2e2d1110ec303477094564)

build() {
	cd libglvnd-$version

	./autogen.sh
	./configure --prefix=/usr --disable-headers
	make
	make DESTDIR=$PKG install

	rm $PKG/usr/lib/pkgconfig/{,e}gl.pc
}
