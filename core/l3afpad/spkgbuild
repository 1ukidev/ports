# description	: Simple plain text editor for GTK+ 3
# depends	: gtk3 intltool

name=l3afpad
version=0.8.18.1.11
release=1
source="https://github.com/stevenhoneyman/l3afpad/archive/v$version/$name-$version.tar.gz"

build() {
	cd $name-$version
	sed -i 's|gtk_window_set_icon_from_file(GTK_WINDOW(mw->window), ICONDIR"/l3afpad.png", NULL);|gtk_window_set_icon_name(GTK_WINDOW(mw->window), "l3afpad");|' src/window.c
	./autogen.sh
	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
}
