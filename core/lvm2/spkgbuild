# description	: Set of tools that manage logical partitions
# depends	: libaio
# backup	: etc/lvm/lvm.conf etc/lvm/lvmlocal.conf

name=lvm2
version=2.03.00
release=2
source=(ftp://sources.redhat.com/pub/lvm2/releases/LVM2.${version}.tgz)
md5sum=(f63cc5feaadd3000138e73f7143ed370)

build() {
	cd LVM2.$version
	SAVEPATH=$PATH
	PATH=$PATH:/sbin:/usr/sbin
	./configure --prefix=/usr       \
	            --exec-prefix=      \
	            --enable-cmdlib     \
	            --enable-pkgconfig  \
	            --enable-udev_sync
	make
	PATH=$SAVEPATH
	unset SAVEPATH
	make DESTDIR=$PKG install

	# temporary workaround
	sed -i 's/@DEFAULT_USE_LVMETAD@/0/' $PKG/etc/lvm/lvm.conf
}
