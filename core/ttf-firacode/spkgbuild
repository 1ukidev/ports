# description	: Fira Code Font ttf 
# depends	: 

name=ttf-firacode
version=5.2
release=1
options=""
noextract=""
backup=""
source="https://github.com/tonsky/FiraCode/releases/download/${version}/Fira_Code_v${version}.zip"

build() {
	mkdir -p "$PKG/usr/share/fonts/${name}"
	cp "ttf/"*.ttf "$PKG/usr/share/fonts/${name}"
}
