# description	: Interface to enumerating power devices, listening to device events and querying history and statistics
# homepage	: https://upower.freedesktop.org/
# maintainer	: Emmett1, emmett1.2miligrams at gmail.com
# depends	: dbus-glib libgudev libusb polkit gobject-introspection

name=upower
version=0.99.9
release=1
source=(https://gitlab.freedesktop.org/upower/upower/uploads/2282c7c0e53fb31816b824c9d1f547e8/upower-$version.tar.xz)
md5sum=(3b2f729ab05afa5df70d0c387194c9fc)

build() {
	cd $name-$version

	./configure --prefix=/usr \
	            --sysconfdir=/etc \
		    --libexecdir=/usr/lib/$name \
	            --localstatedir=/var \
	            --enable-deprecated \
	            --disable-static \
		    --disable-nls
	make
	make DESTDIR=$PKG install
}
